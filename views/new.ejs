<% include ./partials/header %>

<div class="ui main text container segment">
    <h1 class="ui huge header">New blog</h1>
    <form action="/blogs" method="POST" class="ui form">
        <div class="field">
            <label for="">Title</label>
            <input type="text" name="blog[title]" placeholder="title">

        </div>
        <div class="field">
            <label for="">Image Url</label>
            <input type="text" name="blog[image]" placeholder="image url">

        </div>
        <div class="field">
            <label for="">Body</label>
            <textarea name="blog[body]" required></textarea>
        </div>
        <input type="submit" class="ui inverted big green button">
    </form>
</div>
<% include ./partials/footer %>
