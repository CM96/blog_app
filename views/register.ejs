<% include ./partials/header %>
<section class="register-form ">
    <div id="login-form">
        <h1 id="form-header">Sign Up <i class="fas fa-dog"></i></h1>
        <form action="/register" method="POST"  class="login-content">
            <label for="username">Username</label>
            <input type="text" name="username" minlength="6">
            <label for="email">Email</label>
            <input type="email" name="email" minlength="6">
            <label for="password">Password</label>
            <input type="password" name="password" minlength="6">
            <label for="password2">Confirm Password</label>
            <input type="password" name="password2" minlength="6" >
            <button class="btn btn-primary">Register</button>
        </form>
    </div>
</section>
<% include ./partials/footer %>