<% include ./partials/header %>

<div class="container" > <!--ui main text id="indexArea"-->
    <h1 class="display-2">
        RESTful Blog App
    <h1>
    <div class="content container"> <!--ui top attached segment-->
        <div class="items"><!--ui divided items-->
            <% blogs.forEach((blog) => {%>
                <div class="item" >
                    <div class="blog__image">
                        <img src="<%= blog.image%>" alt="blog image" >
                    </div>
                    <div class="blog__content mt-5">
                        <a href="/blogs/<%= blog._id%>" class="header"><%= blog.title%></a>
                        <div class="meta">
                            <span><%= blog.created.toDateString()%></span>
                        </div>
                        <div class="blog__description mb-5">
                            <p><%= blog.body.substring(0,100)%>...</p>
                        </div>
                        <div class="blog__extra mb-5">
                            <a href="/blogs/<%=blog._id%>" class="btn btn-dark">Read More &rarr; </a>
                        </div>
                    </div>
                    
                   
                </div>
            <% }); %>
        </div>
    </div>
</div>
<% include ./partials/footer %>
