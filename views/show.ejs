<% include ./partials/header %>
<div class="container">
    <h1 class=" display-2"><%= blog.title%></h1>
    <div class="content container">
        <div class="item">
            <img src="<%= blog.image%>" alt="blog image" class="item__image rounded">
            <div class="item__content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="item__description">
                <p><%= blog.body%></p>
            </div>
            <a class="btn btn-outline-success mb-3 rounded-pill" href="/blogs/<%= blog._id%>/edit">Edit</a>
            <form id="delete" action="/blogs/<%= blog._id%>?_method=DELETE" method="POST">
                <button class="btn btn-outline-danger button mb-3 rounded-pill">Delete</button>
            </form>
        </div>
    </div>
</div>

<% include ./partials/footer %>