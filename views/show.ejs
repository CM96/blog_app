<% include ./partials/header %>
<div class="blog-view container">
    <div class="blog-content container">
        <h1 class=" display-4"><%= blog.title%></h1>
            <img src="<%= blog.image%>" alt="blog image" class="blog-content-image">
            <div class="blog-content-date mt-4">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <%if (hasAuthor) {%>
            <div class="blog-content-author mt-4">
                <p> Written by <strong><%= blog.author.username %></strong></p>
            </div>
            <%}%>
            <div class="blog-content-description my-4">
                <p><%= blog.body%></p>
            </div>
            <%if (hasAuthor && currentUser.username === blog.author.username) {%>
            <a class="btn btn-outline-success my-3 rounded-pill" href="/blogs/<%= blog._id%>/edit">Edit</a>
            <form id="delete" action="/blogs/<%= blog._id%>?_method=DELETE" method="POST">
                <a class="btn btn-outline-danger button mb-3 rounded-pill">Delete</a>
            </form>
            <%}%>
    </div>
</div>

<% include ./partials/footer %>