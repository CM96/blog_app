<% include ./partials/header %>
<div class="blog-view ">
    <div class="blog-content">
        <h1 class=" display-2"><%= blog.title%></h1>
        <div class="content-image">
            <img src="<%= blog.image%>" alt="blog image" class="item__image">
            <div class="content-date mt-4">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="content-description my-4">
                <p><%= blog.body%></p>
            </div>
            <a class="btn btn-outline-success my-3 rounded-pill" href="/blogs/<%= blog._id%>/edit">Edit</a>
            <form id="delete" action="/blogs/<%= blog._id%>?_method=DELETE" method="POST">
                <button class="btn btn-outline-danger button mb-3 rounded-pill">Delete</button>
            </form>
        </div>
    </div>
</div>

<% include ./partials/footer %>